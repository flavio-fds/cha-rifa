model User {
  numberPhone String  @unique @id
  name  String?
  numbers Number[]
}

model Number {
  number Int @id
  status String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  buyer User @relation(fields: [buyerId], references: [numberPhone])
  buyerId  String
}
